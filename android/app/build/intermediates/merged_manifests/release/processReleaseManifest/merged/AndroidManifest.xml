<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tensorflow.ampelpilot"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:icon="@mipmap/ic_ampel_pilot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ampel_pilot_round"
        android:theme="@style/ThemeNoActionBar" >
        <activity
            android:name="org.tensorflow.ampelpilot.DetectorActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tensorflow.ampelpilot.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="org.tensorflow.ampelpilot.DetectorActivity"
            android:theme="@style/PreferenceScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tensorflow.ampelpilot.DetectorActivity" />
        </activity>
    </application>

</manifest>